<Page x:Class="Belly.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Belly.Pages"
      mc:Ignorable="d" 
      d:DesignWidth="1280" d:DesignHeight="720"
      Title="MainPage"
	  Background="White">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="auto"/>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>


		<GroupBox Grid.RowSpan="2" Grid.Column="0" Header="Пресеты">
			<ListBox x:Name="ListBox_Schedules" DisplayMemberPath="Name" SelectionChanged="ListBox_Schedules_SelectionChanged"/>
		</GroupBox>

		<GroupBox Grid.RowSpan="2" Grid.Column="1" Header="Список задач">
			<TabControl x:Name="TabControl_weekList" SelectionChanged="TabControl_weekList_SelectionChanged">
				<TabItem Header="Понидельник">
					<DataGrid x:Name="DataGrid_MondayIssueList" AutoGenerateColumns="False">
						<DataGrid.Columns>
							<DataGridTextColumn Binding="{Binding Name}" Header="Название" Width="auto"/>
							<DataGridTextColumn Binding="{Binding IssueType}" Header="Тип" Width="50"/>
							<DataGridTextColumn Binding="{Binding text_StartTime}" Header="Начало" Width="50"/>
							<DataGridTextColumn Binding="{Binding text_EndTime}" Header="Конец" Width="50"/>
							<DataGridCheckBoxColumn Binding="{Binding VolumeUpDown}" Header="Прибавление громкости в начале/конце" Width="auto"/>
						</DataGrid.Columns>
					</DataGrid>
				</TabItem>
				<TabItem Header="Вторник">
					<DataGrid x:Name="DataGrid_TuesdayIssueList" AutoGenerateColumns="False">
						<DataGrid.Columns>
							<DataGridTextColumn Binding="{Binding Name}" Header="Название" Width="auto"/>
							<DataGridTextColumn Binding="{Binding IssueType}" Header="Тип" Width="50"/>
							<DataGridTextColumn Binding="{Binding text_StartTime}" Header="Начало" Width="50"/>
							<DataGridTextColumn Binding="{Binding text_EndTime}" Header="Конец" Width="50"/>
							<DataGridCheckBoxColumn Binding="{Binding VolumeUpDown}" Header="Прибавление громкости в начале/конце" Width="auto"/>
						</DataGrid.Columns>
					</DataGrid>
				</TabItem>
				<TabItem Header="Среда">
					<DataGrid x:Name="DataGrid_WednesdayIssueList" AutoGenerateColumns="False">
						<DataGrid.Columns>
							<DataGridTextColumn Binding="{Binding Name}" Header="Название" Width="auto"/>
							<DataGridTextColumn Binding="{Binding IssueType}" Header="Тип" Width="50"/>
							<DataGridTextColumn Binding="{Binding text_StartTime}" Header="Начало" Width="50"/>
							<DataGridTextColumn Binding="{Binding text_EndTime}" Header="Конец" Width="50"/>
							<DataGridCheckBoxColumn Binding="{Binding VolumeUpDown}" Header="Прибавление громкости в начале/конце" Width="auto"/>
						</DataGrid.Columns>
					</DataGrid>
				</TabItem>
				<TabItem Header="Четверг">
					<DataGrid x:Name="DataGrid_ThursdayIssueList" AutoGenerateColumns="False">
						<DataGrid.Columns>
							<DataGridTextColumn Binding="{Binding Name}" Header="Название" Width="auto"/>
							<DataGridTextColumn Binding="{Binding IssueType}" Header="Тип" Width="50"/>
							<DataGridTextColumn Binding="{Binding text_StartTime}" Header="Начало" Width="50"/>
							<DataGridTextColumn Binding="{Binding text_EndTime}" Header="Конец" Width="50"/>
							<DataGridCheckBoxColumn Binding="{Binding VolumeUpDown}" Header="Прибавление громкости в начале/конце" Width="auto"/>
						</DataGrid.Columns>
					</DataGrid>
				</TabItem>
				<TabItem Header="Пятница">
					<DataGrid x:Name="DataGrid_FridayIssueList" AutoGenerateColumns="False">
						<DataGrid.Columns>
							<DataGridTextColumn Binding="{Binding Name}" Header="Название" Width="auto"/>
							<DataGridTextColumn Binding="{Binding IssueType}" Header="Тип" Width="50"/>
							<DataGridTextColumn Binding="{Binding text_StartTime}" Header="Начало" Width="50"/>
							<DataGridTextColumn Binding="{Binding text_EndTime}" Header="Конец" Width="50"/>
							<DataGridCheckBoxColumn Binding="{Binding VolumeUpDown}" Header="Прибавление громкости в начале/конце" Width="auto"/>
						</DataGrid.Columns>
					</DataGrid>
				</TabItem>
				<TabItem Header="Суббота">
					<DataGrid x:Name="DataGrid_SaturdayIssueList" AutoGenerateColumns="False">
						<DataGrid.Columns>
							<DataGridTextColumn Binding="{Binding Name}" Header="Название" Width="auto"/>
							<DataGridTextColumn Binding="{Binding IssueType}" Header="Тип" Width="50"/>
							<DataGridTextColumn Binding="{Binding text_StartTime}" Header="Начало" Width="50"/>
							<DataGridTextColumn Binding="{Binding text_EndTime}" Header="Конец" Width="50"/>
							<DataGridCheckBoxColumn Binding="{Binding VolumeUpDown}" Header="Прибавление громкости в начале/конце" Width="auto"/>
						</DataGrid.Columns>
					</DataGrid>
				</TabItem>

			</TabControl>
		</GroupBox>

		<Label Content="10:08" HorizontalContentAlignment="Center" x:Name="TimeLabel" FontFamily="Arial Black" FontSize="164" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" Grid.RowSpan="2"/>

	</Grid>
</Page>
