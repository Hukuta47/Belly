<Window x:Class="Belly.Dialogs.AddTrackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Belly.Dialogs"
        mc:Ignorable="d" Height="140" Width="245" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>

		<Label Content="Укажите в какие папки добавить музыку:" Grid.ColumnSpan="2"/>
		<CheckBox Margin="5 0 5 0" Grid.ColumnSpan="2" Grid.Row="1" Content="5 Минут" VerticalAlignment="Center"/>
		<CheckBox Margin="5 0 5 0" Grid.ColumnSpan="2" Grid.Row="2" Content="10 Минут" VerticalAlignment="Center"/>
		<CheckBox Margin="5 0 5 0" Grid.ColumnSpan="2" Grid.Row="3" Content="40 Минут" VerticalAlignment="Center"/>

		<StackPanel Grid.ColumnSpan="2" Grid.Row="4" Orientation="Horizontal" FlowDirection="RightToLeft">
			<Button Margin="5" Width="100" Content="Добавить"/>
			<Button Margin="5" Width="100" Content="Отмена"/>
		</StackPanel>
	</Grid>
</Window>
